{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		".env-config.ts",
		"types/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"mock/**/*.ts",
		"vite.config.ts",
		"preset/**/*.ts"
	],
	"exclude": ["src/**/__tests__/*", "node_modules", "dist", "src/**/*.json"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./src/*"]
		},
		"types": ["unplugin-icons/types/vue", "three"],
		"moduleResolution": "node"
	}
}
